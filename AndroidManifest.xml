<?xml version="1.0" encoding="utf-8"?>
<manifest
  package="com.tudelft.triblerdroid.first"
  android:versionCode="1"
  android:versionName="1.0"
  xmlns:android="http://schemas.android.com/apk/res/android">
  <application
    android:debuggable="true"
    android:icon="@drawable/vodo_logo"
    android:label="@string/app_name"
    android:name="com.tudelft.triblerdroid.first.ScriptApplication">
    <activity
      android:name=".ScriptActivity"
      android:configChanges="keyboardHidden|orientation"
      android:theme="@android:style/Theme.DeviceDefault.Light">
      <intent-filter>
        <action
          android:name="android.intent.action.MAIN" />
        <category
          android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
       <intent-filter>
        <action
          android:name="com.googlecode.android_scripting.action.ACTION_LAUNCH_FOR_RESULT" />
        <category
          android:name="android.intent.category.DEFAULT" />
      </intent-filter>
    </activity>
    <service
      android:name="com.tudelft.triblerdroid.first.ScriptService" />
    <activity
      android:configChanges="keyboardHidden|orientation"
      android:name="com.googlecode.android_scripting.activity.FutureActivity" 
      android:theme="@android:style/Theme.Translucent"/>
    <activity android:theme="@android:style/Theme.DeviceDefault.Light" 
      android:configChanges="keyboardHidden|orientation" 
      android:name="com.tudelft.triblerdroid.first.DialogActivity"/>
</application>
  <uses-sdk android:minSdkVersion="4"/>
  <uses-permission
    android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest>